@model IEnumerable<TodolistItemDto>

<h1>Todolist</h1>

<a asp-controller="Todo" asp-action="Create" class="btn btn btn-success">Create</a>
<table class="table table-responsive table-striped table-hover align-middle">
	<thead>
		<tr class="text-center">
			<th>Name</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="text-center">
				<td>@item.Title</td>
				<td>@Html.FormatBool(item.IsCompleted)</td>
				<td>
					<a asp-controller="Todo" asp-action="Details" asp-route-id="@item.Id" class="btn btn btn-success">Details</a>
					<a asp-controller="Todo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
					<a asp-controller="Todo" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>